<!DOCTYPE html>
<html>

<head>
  <style>
    #wp2 {
      overflow: hidden;
      user-select: none;
      width: 100vw;
      height: 90vh;
    }

    #image-container {
      display: grid;
      width: 100%;
      height: 100%;
      max-height: 100%;
      max-width: 100%;
      grid-auto-rows: 512px;
    }
  </style>
  <link rel="stylesheet" href="leaflet.css" />
  <script src="leaflet.js"></script>
</head>

<body>
  <% if (logged_in) { %>
  <input type="radio" name="style" value="color" checked> Color
  <input type="radio" name="style" value="bw"> Black & White
  <div id="map" style="height: 900px;"></div>
  <% } %>

  <div id="wp2">
    <div id="image-container">
    </div>
  </div>
  <script>
    var logged_in_var = "<%= logged_in %>"
    var logged_in = logged_in_var === "true" ? true : false;
    if (logged_in) {
      const URL = "<%= URL %>";
      const map = L.map('map', {
        crs: L.CRS.Simple,
        center: [0, 0],
        minZoom: 1,
        maxZoom: 8,
      }).setView([-250, 250], 2);
      const layer = L.tileLayer(`${URL}/tiles/l{z}/{y}/{x}.jpg?style=color`, {
        maxZoom: 8,
        minZoom: 1,
        noWrap: true,
        tileSize: 512
      }).addTo(map);

      document.querySelectorAll('input[name="style"]').forEach((radio) => {
        radio.addEventListener('change', (e) => {
          if(layer) map.removeLayer(layer);

          layer = L.tileLayer(`${URL}/tiles/l{z}/{y}/{x}.jpg?style=${e.target.value}`, {
            maxZoom: 8,
            minZoom: 1,
            noWrap: true,
            tileSize: 512
          }).addTo(map);
        });
      });
    }
  </script>
</body>

</html>